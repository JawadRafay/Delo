<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_margin="5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/chatBox"
        android:layout_width="wrap_content"
        style="@style/chatStyle"
        app:cardElevation="0dp"
        app:cardCornerRadius="20dp"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tvMsg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:maxWidth="@dimen/_200sdp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:text="its msg."
            android:textSize="14sp"
            android:textStyle="normal" />

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tvTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/chatBox"
        android:layout_marginStart="@dimen/_5sdp"
        android:text="02:56 PM"
        android:textColor="@color/lite_black"
        android:textSize="12sp"
        android:textStyle="normal" />

    <androidx.cardview.widget.CardView
        android:id="@+id/chatBoxMe"
        android:layout_width="wrap_content"
        android:background="@color/btn_text"
        android:layout_alignParentRight="true"
        app:cardBackgroundColor="@color/btn_text"
        app:cardElevation="0dp"
        app:cardCornerRadius="20dp"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tvMsgMe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:maxWidth="@dimen/_200sdp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:text="Its message "
            android:textColor="@color/white"
            android:textSize="14sp"
            android:textStyle="normal" />

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tvTimeMe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/chatBoxMe"
        android:layout_alignParentRight="true"
        android:text="02:56 PM"
        android:textColor="@color/lite_black"
        android:textSize="12sp"
        android:layout_marginEnd="@dimen/_4sdp"
        android:textStyle="normal" />
</RelativeLayout>