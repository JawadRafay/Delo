<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.activities.SettingsActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/back"
            style="@style/imageStyle"
            android:layout_width="30dp"
            android:layout_height="56dp"
            android:layout_marginStart="@dimen/_7sdp"
            android:layout_marginTop="@dimen/_8sdp"
            android:padding="@dimen/_4sdp"
            android:src="@drawable/back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="56dp"
            android:layout_marginStart="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_8sdp"
            android:layout_toEndOf="@+id/back"
            android:gravity="center_vertical"
            android:text="Settings"
            android:textSize="@dimen/_12sdp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/theme_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Theme"
            android:textColor="@color/btn_icon"
            android:textSize="@dimen/_11sdp"
            android:layout_marginStart="@dimen/_13sdp"
            android:layout_marginTop="@dimen/_10sdp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/theme_txt"
            android:layout_marginStart="@dimen/_13sdp"
            android:layout_marginTop="@dimen/_3sdp"
            android:text="Dark Mode"
            android:textSize="@dimen/_10sdp" />

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/switch_darkMode"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_22sdp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_marginEnd="@dimen/_11sdp"
            android:visibility="visible" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/_15sdp"
        android:layout_marginStart="@dimen/_5sdp"
        android:layout_marginEnd="@dimen/_5sdp"
        android:background="@color/gray_text"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Other"
        android:textColor="@color/btn_icon"
        android:textSize="@dimen/_11sdp"
        android:layout_marginStart="@dimen/_13sdp"
        android:layout_marginTop="@dimen/_10sdp"/>

    <TextView
        android:id="@+id/rateUs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rate Us"
        android:textSize="@dimen/_10sdp"
        android:layout_marginStart="@dimen/_13sdp"
        android:layout_marginTop="@dimen/_13sdp"/>

    <TextView
        android:id="@+id/rateUs_tap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Do you like this app? please support on playstore "
        android:textColor="@color/gray"
        android:textSize="@dimen/_10sdp"
        android:layout_marginStart="@dimen/_13sdp" />

    <TextView
        android:id="@+id/share"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Share"
        android:textSize="@dimen/_10sdp"
        android:layout_marginStart="@dimen/_13sdp"
        android:layout_marginTop="@dimen/_13sdp"/>

    <TextView
        android:id="@+id/share_tap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Please share this app with your love ones"
        android:textColor="@color/gray"
        android:textSize="@dimen/_10sdp"
        android:layout_marginStart="@dimen/_13sdp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/_15sdp"
        android:layout_marginStart="@dimen/_5sdp"
        android:layout_marginEnd="@dimen/_5sdp"
        android:background="@color/gray_text"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="About us"
        android:textColor="@color/btn_icon"
        android:textSize="@dimen/_11sdp"
        android:layout_marginStart="@dimen/_13sdp"
        android:layout_marginTop="@dimen/_10sdp"/>

    <TextView
        android:id="@+id/moreApps"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="More apps"
        android:textSize="@dimen/_10sdp"
        android:layout_marginStart="@dimen/_13sdp"
        android:layout_marginTop="@dimen/_3sdp"/>

    <TextView
        android:id="@+id/moreApps_tap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tap to see our more apps"
        android:textColor="@color/gray"
        android:textSize="@dimen/_10sdp"
        android:layout_marginStart="@dimen/_13sdp" />

</LinearLayout>