<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Delo" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->

        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="imageStyle">
        <item name="android:tint">@color/black</item>
        <item name="android:drawableTint" tools:targetApi="m"> @color/white</item>
    </style>

    <style name="audioStyle">
        <item name="android:background">@drawable/audio_bg</item>
    </style>

    <style name="tabStyle">
        <item name="android:background">@color/white</item>
    </style>

    <style name="chatStyle">
        <item name="cardBackgroundColor">@color/back</item>
    </style>

    <style name="textLite">
        <item name="android:textColor">@color/lite_black</item>
    </style>

    <style name="voiceStyle">
        <item name="cardBackgroundColor">@color/voice</item>
    </style>

    <style name="messageStyle">
        <item name="android:background">@drawable/message_bg</item>
    </style>
</resources>